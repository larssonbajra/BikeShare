<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larsson.bicycle.SignUp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/header"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" First Name"
        android:background="@drawable/group3"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="42dp"/>

    <EditText
        android:id="@+id/familyname"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:background="@drawable/group3"
        android:ems="10"
        android:hint=" Family Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="158dp"
        android:layout_below="@id/firstname"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="42dp"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Username"
        android:paddingLeft="42dp"
        android:background="@drawable/group3"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/familyname"
        android:layout_alignLeft="@+id/familyname"
        android:layout_alignStart="@+id/familyname" />

    <EditText
        android:id="@+id/email"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:background="@drawable/mail"
        android:ems="10"
        android:hint="   email"
        android:paddingLeft="46dp"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="232dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:ems="10"
        android:paddingLeft="44dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="310dp"
        android:background="@drawable/group2"
        android:hint=" password"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="34dp" />

    <EditText
        android:id="@+id/repass"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:ems="10"
        android:paddingLeft="44dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="391dp"
        android:background="@drawable/group3"
        android:hint=" confirm password"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/pass"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass" />

    <Button
        android:id="@+id/signup"
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:background="@drawable/group3"
        android:onClick="signup"
        android:text="Sign Up"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="474dp"
        android:layout_below="@+id/repass"
        android:layout_alignLeft="@+id/repass"
        android:layout_alignStart="@+id/repass"
        android:layout_marginTop="28dp" />

</RelativeLayout>
