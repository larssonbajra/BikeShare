<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larsson.bicycle.MainActivity"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/heading"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="46dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="152dp"
        app:srcCompat="@drawable/frontpic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="118dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/id"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="45dp"
        android:background="@drawable/group1"
        android:ems="10"
        android:hint="     ID here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="312dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:background="@drawable/group2"
        android:ems="10"
        android:hint="  password here"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="379dp"
        android:layout_below="@+id/id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="45dp"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:background="@drawable/group3"
        android:text="Login"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="439dp"
        android:layout_below="@+id/pass"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:background="@drawable/group3"
        android:text="Sign Up"
        android:onClick="onClick2"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="501dp"
        android:layout_below="@+id/login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

</RelativeLayout>
