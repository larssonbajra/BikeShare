<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larsson.bicycle.getpassword">

    <ImageView
        android:id="@+id/heading"
        android:layout_width="423dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/header"
        tools:layout_editor_absoluteX="-17dp"
        tools:layout_editor_absoluteY="-2dp" />



    <TextView
        android:id="@+id/passis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_below="@id/heading"
        android:text="Your Password Is" />

    <TextView
        android:id="@+id/passcode"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:textSize="80dp"
        android:textAlignment="center"
        android:layout_below="@+id/passis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cancel_bike"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@drawable/group3"
        android:onClick="onClickCancel"
        android:text="PARK/CANCEL BIKE"
        android:layout_below="@+id/passcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

</RelativeLayout>
