<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larsson.bicycle.Recharge">

    <ImageView
        android:id="@+id/heading"
        android:layout_width="423dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/header"
        tools:layout_editor_absoluteX="-19dp"
        tools:layout_editor_absoluteY="-2dp"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:background="@drawable/logout"
        android:onClick="onClickLogout"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/spinnerAmt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heading"
        android:layout_marginTop="55dp"
        android:background="@drawable/group3"
        android:layout_marginLeft="70dp"
        android:entries="@array/payment_array"
        android:prompt="@string/payment"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/card"
        android:onClick="navigateToBaseActivity"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text="Pay via Bank"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="65dp" />


</RelativeLayout>
